<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
        android:radius="2dp"
        />
    <gradient
        android:startColor="@color/primary_dark"
        android:centerColor="@color/primary"
        android:endColor="@color/primary_light"
        android:angle="0" />
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"
        />
    <size
        android:width="150dp"
        android:height="60dp"
        />
    <stroke
        android:width="1dp"
        android:color="#cccc"
        />
</shape>
</item>

<item android:state_pressed="true" >
<shape>
    <gradient
        android:angle="135"
        android:startColor="#10233D"
        android:centerColor="#3F51B5"
        android:endColor="#3F51B5"
        android:type="linear"
        />
    <stroke
        android:width="1dp"
        android:color="#cccc" />
    <corners
        android:radius="2dp" />
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
</item>
</selector>